# App
APP_NAME=Scientific Search API
APP_VERSION=0.1.0
APP_ENV=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Retrieval/Index
SCISEARCH_VECTOR_STORE_DIR=data/vector_store
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
REQUEST_TIMEOUT_SECONDS=30
ANSWER_MAX_SUBSTEPS_DEFAULT=4
ANSWER_TOP_K_PER_STEP_DEFAULT=3

# Langfuse tracing (disabled by default for smooth local startup)
LANGFUSE_ENABLED=false
LANGFUSE_HOST=http://langfuse:3000
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_ENVIRONMENT=local

# Langfuse self-host infra defaults (used by docker-compose)
LANGFUSE_DB_USER=postgres
LANGFUSE_DB_PASSWORD=postgres
LANGFUSE_DB_NAME=langfuse
LANGFUSE_DB_PORT=5432

LANGFUSE_CLICKHOUSE_DB=default
LANGFUSE_CLICKHOUSE_USER=default
LANGFUSE_CLICKHOUSE_PASSWORD=clickhouse
LANGFUSE_CLICKHOUSE_HTTP_PORT=8123
LANGFUSE_CLICKHOUSE_NATIVE_PORT=9000

LANGFUSE_MINIO_ROOT_USER=minio
LANGFUSE_MINIO_ROOT_PASSWORD=minio123
LANGFUSE_MINIO_PORT=9010
LANGFUSE_MINIO_CONSOLE_PORT=9011
LANGFUSE_S3_BUCKET=langfuse
LANGFUSE_S3_REGION=us-east-1

LANGFUSE_REDIS_PORT=6379

LANGFUSE_NEXTAUTH_SECRET=dev-nextauth-secret-32-chars-0001
LANGFUSE_SALT=dev-salt-secret-32-chars-0000001
